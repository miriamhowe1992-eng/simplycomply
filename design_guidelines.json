{
  "identity": {
    "persona": "E1",
    "philosophy": "Fusion over Imitation. Emotion First. Content is King.",
    "anti_patterns": [
      "Purple/Teal gradients for everything",
      "Inter font for headings",
      "Centered layouts everywhere",
      "Gradient overload"
    ]
  },
  "theme": {
    "mode": "light",
    "emotional_archetype": "ARCHETYPE 4: SWISS & HIGH-CONTRAST (Authority, Clarity, Truth)",
    "vibe": "Professional, Reassuring, Efficient, British (understated, functional)"
  },
  "typography": {
    "fonts": {
      "headings": {
        "family": "Clash Display, sans-serif",
        "weights": ["500", "600", "700"],
        "usage": "Marketing Headings, Dashboard Section Titles",
        "cdn_import": "https://api.fontshare.com/v2/css?f[]=clash-display@500,600,700&display=swap"
      },
      "body": {
        "family": "Manrope, sans-serif",
        "weights": ["400", "500", "600"],
        "usage": "Body text, UI elements, Data tables",
        "cdn_import": "https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600&display=swap"
      },
      "mono": {
        "family": "JetBrains Mono, monospace",
        "usage": "Code snippets, Reference numbers, IDs"
      }
    },
    "rules": {
      "headings": "Tight tracking (-0.02em). No Inter for headings.",
      "overline": "Uppercase, tracking-widest (0.2em), text-xs, font-bold",
      "body": "Relaxed line-height (1.6) for readability."
    }
  },
  "colors": {
    "palette": {
      "primary": {
        "name": "Royal Navy",
        "hex": "#0F172A",
        "tailwind": "slate-900",
        "usage": "Primary Buttons, Headings, Strong Borders"
      },
      "secondary": {
        "name": "Trust Teal",
        "hex": "#0D9488",
        "tailwind": "teal-600",
        "usage": "Accents, Success States, Highlights (Use sparingly)"
      },
      "background": {
        "default": "#FFFFFF",
        "subtle": "#F8FAFC",
        "paper": "#FFFFFF"
      },
      "text": {
        "primary": "#0F172A",
        "secondary": "#475569",
        "muted": "#94A3B8"
      },
      "status": {
        "success": "#10B981",
        "warning": "#F59E0B",
        "error": "#E11D48",
        "info": "#3B82F6"
      }
    },
    "gradients": {
      "subtle_glow": "linear-gradient(180deg, rgba(255,255,255,0) 0%, rgba(13,148,136,0.05) 100%)",
      "hero_mesh": "radial-gradient(circle at 50% 0%, rgba(13,148,136,0.1) 0%, rgba(255,255,255,0) 50%)"
    }
  },
  "layout": {
    "spacing_scale": "p-1, p-2, p-4, p-6, p-8, p-12, p-16, p-20, p-24, p-32",
    "container_padding": "px-6 md:px-12 lg:px-24",
    "grids": {
      "marketing": {
        "name": "The Tetris Grid",
        "classes": "grid grid-cols-1 md:grid-cols-12 gap-8",
        "rules": "Asymmetry is key. Mix col-span-4, col-span-8, and col-span-6. Never fill 100% perfectly."
      },
      "dashboard": {
        "name": "The Bento Grid",
        "classes": "grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6",
        "rules": "High density. Use h-full on children. No jagged bottoms."
      }
    }
  },
  "components": {
    "buttons": {
      "style": "Sharp or slightly rounded (rounded-md). No pill shapes for enterprise.",
      "primary": "bg-slate-900 text-white hover:bg-slate-800 shadow-lg hover:shadow-xl transition-all",
      "secondary": "bg-white border border-slate-200 text-slate-900 hover:bg-slate-50"
    },
    "cards": {
      "style": "Flat with subtle border. Minimal shadow.",
      "classes": "bg-white border border-slate-200 rounded-lg shadow-sm hover:shadow-md transition-shadow"
    },
    "inputs": {
      "style": "Solid background, clear border.",
      "classes": "bg-slate-50 border-slate-200 focus:border-teal-600 focus:ring-teal-600/20 rounded-md"
    },
    "navigation": {
      "style": "Sticky, glassmorphism (subtle).",
      "classes": "sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-200/50"
    }
  },
